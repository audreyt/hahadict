{
  "name": "HahaDict",
  "version": "0.5.0",
  "manifest_version": 2,
  "description": "教育部重編國語辭典 Chrome 離線版",
  "permissions": [
    "<all_urls>",
    "contextMenus",
    "storage"
  ],
  "icons": {
    "16": "img/icon16.png",
    "48": "img/icon48.png",
    "128": "img/icon128.png" 
  },
  "app": {
    "launch":{
      "local_path": "index.html"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["js/content_script.js"],
      "all_frames": true
    }
  ],
  "background": {
    "scripts": ["js/jquery-1.9.0.min.js", "js/background.js"]
  }
}